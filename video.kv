<video_alan>:
	video: _video
	ilerleme: _ilerleme
	altyazi: _altyazi
	giris: _giris
	durumcubugu: _durumcubugu
	size_hint: 1,0.9
	
	
	
	Video:
		id: _video
		allow_stretch: True
		pos_hint: {"x":0,"y":0.1}
		play: True
		state: "play"
		
	AsyncImage:
		id: _giris
		pos_hint: {"center_x":0.5,"y":0.1}
		source: "giris.png"
	
	Label:
	
		id: _altyazi
		markup: True
		pos:0,-200
		font_size: 30
		text: u""
			
		
	

	BoxLayout:
		
		id: _durumcubugu
		
		pos_hint: {"x":0,"y":0}
		
		orientation: "horizontal"
		
		size_hint: 1,0.1
		
		Button:

			size: 33,33
			size_hint: None,None
			pos_hint: {"center_x":0.5,"center_y":0.5}
			background_normal: "ply_nrm.png"
			background_down: "ply_down.png"
			
		
			on_release: root.oynat()
			
		Button:
			
			size: 33,33
			size_hint: None,None
			pos_hint: {"center_x":0.5,"center_y":0.5}
			background_normal: "ps_nrml.png"
			background_down: "ps_down.png"
			
			on_release: root.duraklat()
		
		Button:
			size: 33,33
			size_hint: None,None
			pos_hint: {"center_x":0.5,"center_y":0.5}
			background_normal: "stp_nrml.png"
			background_down: "stp_down.png"
			
			on_release: root.durdur()
		
		Slider:
			id: _ilerleme
			min:0
			max:1
			value:0
			pos_hint: {"center_x":0.5,"center_y":0.5}


